        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>
<a href='~/pizzas/create'> <input type="button" class="btn btn-primary" value="Ajouter une pizza"> </a>
<div class="row">
    @foreach (var pizza in @ViewBag.Tablopizza)
    {
    <div class="col-md-4">
        <div class="thumbnail ">
            <img src='~/Images/@(pizza.NroPizz + ".jpg")' class="thumbnail view zoom"  width="300" height="300" />
                 <div class="caption">
                    <p>Lorem ipsum...</p>
                </div>
                 <div class='encart-description'>
                     <p class='title'>@pizza.DesignPizz </p>
                     <p class='description'> @pizza.TarifPizz</p>
                     <a href='~/pizzas/details/@(pizza.NroPizz)'> <input type="button" class="btn btn-primary" value="Modifier"> </a>
                     <div>
                         @Html.ActionLink("Supprimer", "Delete", new { id = pizza.NroPizz })
                     </div>
                 </div>
        </div>
        </div>
        }
 </div>
 
 